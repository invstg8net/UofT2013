<div id="search" align="center" vertical-align="middle">
  <header>
    <h2>Search</h2>
  </header>
  <%= form_tag doSearch_researchers_path, :method => 'get' do%>
    <p>
      <%= text_field_tag :search, params[:search], :placeholder => "Enter your search" %>
      <%= select_tag(:search_type, (options_for_select([['Name', 'name'], ['Expertise', 'expertise'], ['Pseudonym', 'pseudonym'], ['Region', 'region']]))) %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

