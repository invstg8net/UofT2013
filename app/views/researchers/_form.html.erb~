<%= form_for(@researcher) do |f| %>
  <% if @researcher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@researcher.errors.count, "error") %> prohibited this researcher from being saved:</h2>

      <ul>
      <% @researcher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
<div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
